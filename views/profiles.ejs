<%- include('./header.ejs', {path: './'}); %>
    <div class="main-container">
        <section class="text-center">
            <div class="container">
                <div class="row">
                    <div class="col-sm-10 col-md-8">
                        <h1>By helping young students, you build a better, more stable society. </h1>
                    </div>
                </div>
                <!--end of row-->
            </div>
            <!--end of container-->
        </section>
        
        <section>
            <div class="container">
                <div class="row">
                    <% for(var i = 0; i < users.length; i++) { %>
                        <div class="col-sm-4">
                            <div class="feature feature-1 boxed boxed--border">
                                <h5><%= users[i].name %>, <%= users[i].department %> <%= users[i].year %> </h5>
                                <p>
                                    <%= users[i].goal %>
                                </p>
                                <a href="/profiles/public?_id=<%= users[i]._id %>">
                                    View
                                </a>
                            </div>
                            <!--end feature-->
                        </div>
                    <% } %>
                </div>
                <!--end of row-->
            </div>
            <!--end of container-->
        </section>
<%- include('./footer.ejs', {path: './'}); %>
